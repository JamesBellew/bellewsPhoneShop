@model bellewsPhoneShop.Models.Case

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cases</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="caseId" />
            <div class="form-group">
                <label asp-for="caseName" class="control-label"></label>
                <input asp-for="caseName" class="form-control" />
                <span asp-validation-for="caseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="casePrice" class="control-label"></label>
                <input asp-for="casePrice" class="form-control" />
                <span asp-validation-for="casePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="caseColor" class="control-label"></label>
                <input asp-for="caseColor" class="form-control" />
                <span asp-validation-for="caseColor" class="text-danger"></span>
            </div>
          


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
